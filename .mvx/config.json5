{
  // mvx project configuration
  // See https://github.com/gnodet/mvx for documentation

  // Project metadata
  project: {
    name: "mvx",
    description: ""
  },

  // Tool versions and configurations
  tools: {
    java: {
      version: "17",
      distribution: "zulu"
    },
    maven: {
      version: "4.0.0-rc-4"
    },
    node: {
      version: "22.20.0"
    },
    go: {
      version: "1.24.2"
    }
  },

  // Custom commands
  commands: {
    deps: {
      description: "Download dependencies",
      script: "go mod download && go mod tidy"
    },

    hello: {
      description: "Say hello",
      script: "echo Hello from mvx! && mvn -v"
    },

    benchmark: {
      description: "Run benchmarks",
      script: "cd test && go test -bench=. -benchtime=3s ./..."
    },

    build: {
      description: "Build mvx binary with platform-optimized settings",
      script: "go build -o mvx-dev . && echo 'Installing global development binary...' && mkdir -p ~/.mvx/dev && cp mvx-dev ~/.mvx/dev/mvx && chmod +x ~/.mvx/dev/mvx && echo 'âœ… Global development binary installed at ~/.mvx/dev/mvx' && echo '   All projects using mvxVersion=dev will now use this binary automatically'"
    },

    fmt: {
      description: "Format code",
      script: "go fmt ./..."
    },

    "install-golangci-lint": {
      description: "Install golangci-lint linter",
      script: "go install github.com/golangci/golangci-lint/v2/cmd/golangci-lint@v2.5.0"
    },

    lint: {
      description: "Run linter",
      script: "golangci-lint run"
    },

    test: {
      description: "Run all tests",
      script: "go test -v ./..."
    },

    "test-integration": {
      description: "Run integration tests",
      script: "cd test && go test -v -timeout=5m ./..."
    },

    "website-build": {
      description: "Build the website using ROQ",
      script: "cd website && QUARKUS_ROQ_GENERATOR_BATCH=true mvn clean package quarkus:run -DskipTests --no-transfer-progress"
    },

    "website-serve": {
      description: "Serve the website using ROQ dev mode",
      script: "cd website && mvn quarkus:dev -Dquarkus.http.port=8081 --no-transfer-progress"
    },

    "build-all": {
      description: "Build for all platforms",
      script: "./scripts/build-all.sh"
    },

    checksums: {
      description: "Generate checksums for release binaries",
      script: "./scripts/checksums.sh"
    },

    clean: {
      description: "Clean build artifacts",
      script: "rm -f mvx-dev && rm -rf dist/ && rm -f ~/.mvx/dev/mvx && echo 'ðŸ§¹ Cleaned local and global dev binaries'"
    },

    changelog: {
      description: "Generate changelog between two git tags/commits",
      script: "./scripts/generate-changelog.sh"
    }
  }
}
